{
  "name": "land-management-plan-web",
  "version": "1.0.0",
  "description": "ELM Land Management Plan web front end",
  "main": "index.js",
  "scripts": {
    "build:css": "bin/build-css",
    "build": "bin/build",
    "lint": "standard",
    "unit-test": "lab -c -r console -o stdout -r lcov -o lcov.info",
    "test": "npm run lint && npm run unit-test",
    "postinstall": "npm run build",
    "start": "node index.js",
    "start-quiet": "node index.js >/dev/null",
    "pa11y-test": "pa11y-ci",
    "snyk-test": "snyk test",
    "ci-test": "start-server-and-test start-quiet 3000 pa11y-test",
    "all-tests": "npm run test && npm run snyk-test && npm run ci-test"
  },
  "author": "Defra DDTS",
  "contributors": [
    "Matthew Collins <matthew.collins@defra.gov.uk>",
    "David Bingham <david.bingham@defra.gov.uk>"
  ],
  "license": "OGL",
  "dependencies": {
    "boom": "7.3.0",
    "govuk-frontend": "2.11.0",
    "hapi": "18.1.0",
    "inert": "5.1.3",
    "joi": "14.3.1",
    "nunjucks": "3.2.0",
    "vision": "5.4.4"
  },
  "devDependencies": {
    "blipp": "^4.0.0",
    "code": "5.2.4",
    "codeclimate-test-reporter": "0.5.1",
    "good": "8.1.2",
    "good-console": "8.0.0",
    "good-file": "6.0.1",
    "good-squeeze": "5.1.0",
    "lab": "^18.0.2",
    "node-sass": "^4.11.0",
    "pa11y-ci": "^2.2.0",
    "snyk": "^1.154.0",
    "standard": "12.0.1",
    "start-server-and-test": "^1.9.0"
  }
}
